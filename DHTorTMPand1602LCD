// DHT code from:
// Example testing sketch for various DHT humidity/temperature sensors
// Written by ladyada, public domain

#include "DHT.h"

#define DHTPIN 2     // what pin we're connected to

// Uncomment whatever type you're using!
#define DHTTYPE DHT11   // DHT 11 
// #define DHTTYPE DHT22   // DHT 22  (AM2302)
//#define DHTTYPE DHT21   // DHT 21 (AM2301)
DHT dht(DHTPIN, DHTTYPE);

// LCD
// LCD RS=3, EN=4, DS4=5, DS5=6, DS6=7, DS7=8
#include <LiquidCrystal.h>
LiquidCrystal lcd(7, 8, 9, 10, 11, 12);

int sensorPin = 0; //the analog pin the TMP36's Vout (sense) pin is connected to
int buttonDHTpin = 3;
int buttonTMPpin = 4;


void setup() {
  Serial.begin(9600);
  // set up the LCD's number of columns and rows: 
  lcd.begin(16,2);
  dht.begin();
  pinMode(buttonDHTpin, INPUT_PULLUP);
  pinMode(buttonTMPpin, INPUT_PULLUP);
}

void loop() {
  
  // Reading temperature or humidity takes about 250 milliseconds!
  // Sensor readings may also be up to 2 seconds 'old' (its a very slow sensor)
  int h = dht.readHumidity();
  int t = dht.readTemperature();
  int t2= analogRead(sensorPin); //TMP36 sensor

  // converting t2 reading to voltage, for 3.3v arduino use 3.3
  float voltage = t2 * 5.0;
  voltage /= 1024.0; 
  float temperatureC = (voltage - 0.5) * 100 ;  //converting from 10 mv per degree wit 500 mV offset

 {
  if(digitalRead(buttonDHTpin) == LOW)
   {  
  Serial.print("DHT display");
  // set the cursor to (0,0):
  lcd.setCursor(0, 0);
  // print from 0 to 9:

/* TMP36 printing
*/
   lcd.print("Temp: ");
   lcd.print(temperatureC);
   lcd.print("C");
    delay(1000);
   }
 {
  if(digitalRead(buttonTMPpin) == LOW)
   {
       Serial.print("TMP display");

  // set the cursor to (0,0):
  lcd.setCursor(0, 0);
  // print from 0 to 9:

/* DHT11 printing
*/
   lcd.print("Temp: ");
   lcd.print(t);
   lcd.print("C");
  // set the cursor to (16,1):
  lcd.setCursor(0,1);
  lcd.print("Humidity: ");
  lcd.print(h);
  lcd.print("%");
    delay(200);
   }
}
 }
}
